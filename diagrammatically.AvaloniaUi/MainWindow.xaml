<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="diagrammatically.AvaloniaUi"
        Width="420" Height="320">
  <StackPanel Orientation="Horizontal">
        <StackPanel Orientation="Vertical">
            <TextBox Text="{Binding Input, Mode=TwoWay}" VerticalAlignment="Top" Margin="5" Width="200" Height="30" ></TextBox>
            <Button Margin="5" Width="200" Height="30" Name="BttLoadNl">Load nl dix</Button>
      </StackPanel>
        <StackPanel Orientation="Vertical">
      <ListBox Width="200" Height="300" Items="{Binding Words}" Margin="5" IsVisible="{Binding !!Words.Count}"/>
    </StackPanel>
  </StackPanel>
</Window>